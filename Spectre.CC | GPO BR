local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local root = character:WaitForChild("HumanoidRootPart")

local targets = {
	workspace.Chests.Common,
	workspace.Chests.Legendary,
	workspace.Chests.Mythical,
	workspace.Chests.Rare,
	workspace.Chests.Uncommon,
}

local spacing = 5
local startOffset = 5 -- distance in front of player before first chest

local forward = root.CFrame.LookVector

for i, obj in ipairs(targets) do
	if obj then
		local offset = startOffset + (i - 1) * spacing
		local newPosition = root.Position + forward * offset

		if obj:IsA("Model") then
			if not obj.PrimaryPart then
				obj.PrimaryPart = obj:FindFirstChildWhichIsA("BasePart")
			end
			if obj.PrimaryPart then
				obj:SetPrimaryPartCFrame(CFrame.new(newPosition))
			end
		elseif obj:IsA("BasePart") then
			obj.CFrame = CFrame.new(newPosition)
		end
	end
end
